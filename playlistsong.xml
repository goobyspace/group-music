<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
                        https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
    <Frame name="PlaylistSongTemplate" virtual="true">
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Text" inherits="GameFontHighlight" wordwrap="false" justifyH="LEFT">
                    <Anchors>
                        <Anchor point="LEFT" x="50"/>
                        <Anchor point="RIGHT" x="-50"/>
                    </Anchors>
                    <Color r="0.95" g="0.95" b="0.95"/>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button parentKey="MoveUpButton">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="LEFT" x="0"/>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <Texture file="Interface\Buttons\UI-MicroStream-Yellow" rotation="180">
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                            <Size x="16" y="16"/>
                        </Texture>
                    </Layer>
                </Layers>
                <NormalTexture file="Interface\Buttons\UI-SquareButton-Up"/>
				<PushedTexture file="Interface\Buttons\UI-SquareButton-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
            </Button>
            <Button parentKey="MoveDownButton">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="LEFT" x="20"/>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <Texture file="Interface\Buttons\UI-MicroStream-Yellow">
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                            <Size x="16" y="16"/>
                        </Texture>
                    </Layer>
                </Layers>
                <NormalTexture file="Interface\Buttons\UI-SquareButton-Up"/>
				<PushedTexture file="Interface\Buttons\UI-SquareButton-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
            </Button>
			<Button parentKey="PlayButton">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="RIGHT" x="-44"/>
                </Anchors>
                <NormalTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Up"/>
				<PushedTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
            </Button>
            <Button parentKey="LoopButton">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="RIGHT" x="-24"/>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <Texture file="Interface\Glues\CharacterSelect\CharacterUndelete" rotation="180">
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                            <Size x="24" y="24"/>
                        </Texture>
                    </Layer>
                </Layers>
                <NormalTexture file="Interface\Buttons\UI-SquareButton-Up"/>
				<PushedTexture file="Interface\Buttons\UI-SquareButton-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
            </Button>
            <Button parentKey="DeleteButton">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="RIGHT" x="-4"/>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <Texture file="Interface\Buttons\UI-GroupLoot-Pass-Up" >
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                            <Size x="12" y="12"/>
                        </Texture>
                    </Layer>
                </Layers>
                <NormalTexture file="Interface\Buttons\UI-SquareButton-Up"/>
				<PushedTexture file="Interface\Buttons\UI-SquareButton-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
            </Button>
		</Frames>
    </Frame>
</Ui>
